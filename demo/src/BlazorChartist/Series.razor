@typeparam TData
@implements IDisposable
@code {
    [CascadingParameter] public Chart OwnerChart { get; set; }

    [Parameter] public IEnumerable<TData> Values { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            OwnerChart.Series.Add(Values);
            await OwnerChart.UpdateAsync();
        }
    }

    void IDisposable.Dispose()
    {
        OwnerChart.Series.Remove(Values);
        _ = OwnerChart.UpdateAsync();
    }
}
